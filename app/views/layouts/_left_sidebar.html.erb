<h2>User info</h2>
<%= attachment_image_tag user,:profile_image,
  :fill, 100, 100,  fallback: "no_image.jpg" %>
<table class="table">
  <tbody>
    <tr>
      <th>name</th>
      <td><%= user.name %></td>
    </tr>
    <tr>
      <th>introduction</th>
      <td><%= user.introduction %></td>
    </tr>
  </tbody>
</table>
<%= link_to "", edit_user_path(current_user), 
  class:"fas fa-user-edit btn btn-outline-secondary btn-block" %>

<h2 class="mt-3">New book</h2>
<%= form_with model:book, local:true do |f| %>
  <% if book.errors.any? %>
    <%= render "layouts/form_error", model: book %>
  <% end %>
  
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :body, "Opinion" %>
    <%= f.text_area :body, class:"form-control" %>
  </div>

  <div class="form-group">
      <%= f.submit "Create Book", class:"form-control btn btn-success btn-sm" %>
  </div>
<% end %>