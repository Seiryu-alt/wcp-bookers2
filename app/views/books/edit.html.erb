<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h1>Editing Book</h1>
      <%= form_with model:@book, local: true do |f| %>
        <% if @book.errors.any? %>
          <%= render "layouts/form_error", model: @book %>
        <% end %>

        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :body, "Opinion" %>
          <%= f.text_area :body, class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "Update Book", class:"form-control btn btn-success btn-sm" %>
        </div>
      <% end %>

      <%= link_to "Show", book_path(@book), class:"btn btn-sm btn-outline-info" %>
      <%= link_to "Back", books_path, class:"btn btn-sm btn-outline-danger" %>
    </div>
  </div>
</div>